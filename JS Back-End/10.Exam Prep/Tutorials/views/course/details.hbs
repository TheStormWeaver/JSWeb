<main>
  <div class="container">
    <h1 class="my-4">Title :
      {{courseData.title}}
    </h1>

    <div class="row">

      <div class="col-md-8">
        <img class="img-fluid" src="{{courseData.imageUrl}}" alt="JavaScript" />
      </div>

      <div class="col-md-4 text-center">
        <h4 class="my-3">Duration</h4>
        <p>{{courseData.duration}}</p>
        <h3 class="my-3">Description</h3>
        <p>{{courseData.description}}</p>

        {{#if courseData.isAuthor}}
          <a
            class="btn btn-danger"
            href="/course/delete/{{courseData._id}}"
          >Delete</a>
          <a
            class="btn btn-warning"
            href="/course/edit/{{courseData._id}}"
          >Edit</a>
        {{else}}
          {{#if courseData.enrolled}}
            <span class="enrolled-span">You are already enrolled</span>
          {{else}}
            <a
              class="btn btn-primary"
              href="/course/enroll/{{courseData._id}}"
            >Enroll</a>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
</main>
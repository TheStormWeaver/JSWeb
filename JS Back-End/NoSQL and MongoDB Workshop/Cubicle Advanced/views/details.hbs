{{#with cube}}
<h1>{{name}}</h1>
<img
  class="cube"
  src="{{imageUrl}}"
/>
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/edit/{{_id}}">Edit</a>
</div>
<div class="details">
  <form action="/comments/{{_id}}/create" method="POST">
  <span>Name: <input type="text" name="author"></span>
  <span>Comment: <textarea name="content"></textarea>
  <input type="submit" value="Post comment">
  </span>
  </form>
  {{#each comments}}
  {{> comment}}
  {{else}}
  <span style="font-style:italic">No comments yet. Be the first!</span>
  {{/each}}
</div>
{{/with}}